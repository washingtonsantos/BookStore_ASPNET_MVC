@model BookStore.WEB.ViewModels.Categoria.CategoriaViewModel

@{
    ViewData["Title"] = "Editar Categoria";
}


<div class="container-fluid">

    <div class="row">
        <h4 class="col-10">Editar Categoria</h4>
        <button class="btn btn-secondary float-right" onclick="location.href='@Url.Action("Index", "Categoria")'">Voltar</button>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Alterar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>




