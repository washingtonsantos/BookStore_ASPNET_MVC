@model BookStore.WEB.ViewModels.Livro.LivroViewModel

<form>
    <div class="form-row">
        <div class="form-group col-md-6" placeholder="Recipient's username">
            @Html.LabelFor(x => x.Nome)
            @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.ISBN)
            @Html.EditorFor(x => x.ISBN, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.DataLancamento)
            @Html.EditorFor(x => x.DataLancamento, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(x => x.CategoriaId)
            @Html.DropDownListFor(x => x.CategoriaId,
           Model.Categorias,
           "Selecione uma categoria",
           new { htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>
</form>
